{
	"required_api_version": "^2.0.0",
	"name": "Cursor Recent",
	"description": "Quickly open recently-opened Cursor project directories and files",

	"developer_name": "plibither8, GEkuL, slimneotech",
	"icon": "images/icon.svg",
	"preferences": [
		{
			"id": "code_kw",
			"type": "keyword",
			"name": "Trigger keyword",
			"default_value": "r"
		},
		{
			"id": "excluded_env_vars",
			"type": "input",
			"name": "Comma seperated list of env vars to remove when starting cursor, e.g. PYTHONPATH"
		},
		{
			"id": "create_file",
			"type": "select",
			"name": "Create File Option",
			"default_value": true,
			"options": [
				{ "value": "true", "text": "Yes" },
				{ "value": "false", "text": "No" }
			]
		},
		{
			"id": "exclude_dir",
			"type": "input",
			"name": "Exclude Directory (comma separated)"
		}
	]
}
